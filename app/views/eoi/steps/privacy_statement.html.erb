<% provide(:title, (session[:has_error] || '') + t('agree_privacy_statement.full', scope: "expression_of_interest.questions") + " - ") %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/16?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/16" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-heading-l">
            <%= t('agree_privacy_statement.heading', scope: "expression_of_interest.questions")  %>
          </h1>
        </legend>
        <p class="govuk-body">
          <%= govuk_link_to t('individual.questions.agree_privacy_statement.link'), "https://www.gov.uk/government/publications/homes-for-ukraine-scheme-expressions-of-interest-eois-privacy-notices/homes-for-ukraine-scheme-expressions-of-interest-individuals", target: "_blank", id: "privacy-statement-link" %>
        </p>
    </fieldset>

    <%= f.govuk_error_summary link_base_errors_to: :agree_privacy_statement %>
        <%= f.govuk_check_boxes_fieldset :agree_privacy_statement, multiple: false, legend: { text: '', hidden: true } do %>
            
        <%= f.govuk_check_box :agree_privacy_statement, "true", "false", multiple: false, link_errors: true, label: { text: t('agree_privacy_statement.comment', scope: "expression_of_interest.questions") } %><% end %>

        <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
