<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/12?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/12" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>
      <%= f.govuk_text_field :single_room_count,
        label: { text: t('single_room_count.full', scope: "expression_of_interest.questions"), size: 'm' },
        hint: { text: t('single_room_count.hint', scope: "expression_of_interest.questions") },
        type: "number",
        width: 2
      %>
      <%= f.govuk_text_field :double_room_count,
        label: { text: t('double_room_count.full', scope: "expression_of_interest.questions"), size: 'm' },
        hint: { text: t('double_room_count.hint', scope: "expression_of_interest.questions")},
        type: "number",
        min: 0,
        width: 2
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

