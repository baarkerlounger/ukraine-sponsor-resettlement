<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/expression-of-interest/steps/3", method: :post do |f| %>
    
      <h1 class="govuk-heading-l">
       <%= t('phone_number.full', scope: "expression_of_interest.questions")  %>
      </h1> 

      <%= f.govuk_text_field :phone_number,
        label: { text: t('phone_number.full', scope: "expression_of_interest.questions"), hidden:true },
        type: "tel"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

