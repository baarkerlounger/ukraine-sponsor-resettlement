<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <% if request.query_string == 'check' %>
      <% formurl = "/expression-of-interest/steps/7?check" %>
    <% else %>
      <% formurl = "/expression-of-interest/steps/7" %>
    <% end %>

    <%= form_for @application, url: formurl, method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :more_properties,
          @application.more_properties_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "expression_of_interest.more_properties")) },
          :id,
          :name,
          legend: { text: t('more_properties.full', scope: "additional_info.questions") },
          hint: { text: t('more_properties.hint', scope: "additional_info.questions")}
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
