<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @privacyconfirm, url: "/confirm-application", method: :post do |f| %>
        <%= f.govuk_check_boxes_fieldset :privacy_statement_confirm,
                                         multiple: false,
                                         legend: { text: 'Confirm that you have read and agree to the privacy statement', scope: "unaccompanied_minor.questions", size: "l" } do %>

                                         <p></p>
          
        <%= f.govuk_check_box :privacy_statement_confirm, "true", "false", multiple: false, link_errors: true, label: { text: t('privacy_statement.full_html', scope: "unaccompanied_minor.questions") } %><% end %>

        <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>