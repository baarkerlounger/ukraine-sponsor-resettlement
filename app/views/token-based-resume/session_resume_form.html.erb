<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">


      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    <% if flash[:error] %>
      <h1 class="govuk-heading-l">This code has expired</h1>
      <p class="govuk-error-message"><%= flash[:error] %></p>
    <% else %>
      <h1 class="gem-c-title__text govuk-heading-l">
        We've sent a 6-digit code to your phone
      </h1>
      <p class="govuk-body">We've sent a secure one time time code to your phone. Enter the code to access your application.</p>
    <% end %>
        </legend>
      </fieldset>

    <%= form_for @abstractresumetoken, url: "/sponsor-a-child/resume-application?uuid=#{params["uuid"]}", method: :post do |f| %>
      <%= f.govuk_text_field :token, 
                             width: 10,
                             label: { text: t('6-digit code'), size: 'm'},
                             pattern: "[0-9]*",
                             inputmode: "numeric",
                             required: true
      %>
      
      <p class="govuk-body">
        <a href='/sponsor-a-child/save-and-return/resend-token?uuid=<%= params["uuid"] %>' class="govuk-button govuk-button--secondary">
          Request another code
        </a>
      </p>

      <%= f.govuk_submit t('Continue') %>
      <a href="/sponsor-a-child/start" class="govuk-link">Start a new application</a>
    <% end %>

  </div>
</div>



