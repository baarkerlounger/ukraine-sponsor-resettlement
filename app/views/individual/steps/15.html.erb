<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  
    <%= form_for @application, url: "/individual/steps/15", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :allow_pet,
          @application.allow_pet_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "individual.allow_pet")) },
          :id,
          :name,
          legend: { text: t('allow_pet.full', scope: "individual.questions")},
          hint: { text: t('allow_pet.hint', scope: "individual.questions")}
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
