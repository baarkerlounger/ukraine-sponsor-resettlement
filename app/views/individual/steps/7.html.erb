<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/individual/steps/7", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :accommodation_length,
        @application.accommodation_length_types.map{|type| OpenStruct.new(id: type, name: t(type, scope: "individual.accommodation_length")) },
        :id,
        :name,
        legend: { text: t('accommodation_length.full', scope: "individual.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
