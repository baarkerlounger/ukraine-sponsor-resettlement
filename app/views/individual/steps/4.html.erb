<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <h2 class="govuk-heading-m">Enter your full residential address</h2>

    <p class="hint">This is the address where you live</p>

    <%= form_for @application, url: "/individual/steps/4", method: :post do |f| %>
      <%= f.govuk_text_field :residential_line_1,
                             label: { text: t('address_line_1.full', scope: "individual.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :residential_line_2,
                             label: { text: t('address_line_2.full', scope: "individual.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :residential_town,
                             label: { text: t('address_town.full', scope: "individual.questions") },
                             type: "text",
                             width: 20
      %>
      <%= f.govuk_text_field :residential_postcode,
                             label: { text: t('address_postcode.full', scope: "individual.questions") },
                             type: "text",
                             width: 10
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
