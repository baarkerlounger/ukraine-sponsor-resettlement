<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/individual/steps/4", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :mobility_impairments_type,
        @application.mobility_impairments_types.map{|type| OpenStruct.new(id: type, name: t(type, scope: "individual.mobility_impairments_type")) },
        :id,
        :name,
        legend: { text: t('mobility_impairments.full', scope: "individual.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
