<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/individual/steps/4", method: :post do |f| %>
      <%= f.govuk_text_field :single_room_count,
        label: { text: t('number_of_single_rooms.full', scope: "individual.questions") },
        type: "number",
        min: 0
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

