<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/individual/steps/2", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :family_or_single_type,
          @application.family_or_single_types.map{ |o| OpenStruct.new(id: o, name: o) },
          :id,
          :name,
          legend: { text: 'Are you willing to sponsor a family or a single person?' }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
