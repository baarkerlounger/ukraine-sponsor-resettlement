<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <h2 class="govuk-heading-m">Enter the address of the property youâ€™re offering</h2>

    <%= form_for @application, url: "/individual/steps/6", method: :post do |f| %>
      <%= f.govuk_text_field :property_one_line_1,
                             label: { text: t('address_line_1.full', scope: "individual.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :property_one_line_2,
                             label: { text: t('address_line_2.full', scope: "individual.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :property_one_town,
                             label: { text: t('address_town.full', scope: "additional_info.questions") },
                             type: "text",
                             width: 20
      %>
      <%= f.govuk_text_field :property_one_postcode,
                             label: { text: t('address_postcode.full', scope: "additional_info.questions") },
                             type: "text",
                             width: 10
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
