<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/individual/steps/12", method: :post do |f| %>
      <%= f.govuk_text_field :single_room_count,
        label: { text: t('single_room_count.full', scope: "individual.questions"), size: 'm' },
        hint: { text: t('single_room_count.hint', scope: "individual.questions") },
        type: "number",
        width: 2
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

