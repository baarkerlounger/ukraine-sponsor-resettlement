<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/individual/steps/1", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :sponsor_type,
          @application.sponsor_types.map{ |o| OpenStruct.new(id: o, name: o) },
          :id,
          :name,
          legend: { text: 'Who would you like to sponsor?' }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
