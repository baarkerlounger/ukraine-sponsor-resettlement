<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    

    <%= form_for @application, url: "/individual/steps/1", method: :post do |f| %>
      <%= f.govuk_text_field :fullname,
        label: { text: t('fullname.full', scope: "individual.questions") },
        type: "text"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

