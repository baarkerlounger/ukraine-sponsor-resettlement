<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    

    <%= form_for @application, url: "/organisation/steps/4", method: :post do |f| %>
      <%= f.govuk_text_field :property_count,
        label: { text: t('property_count.full', scope: "organisation.questions") },
        type: "number",
        min: 0
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
