<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/organisation/steps/14", method: :post do |f| %>
      <%= f.govuk_check_boxes_fieldset :agree_privacy_statement, multiple: false, legend: { text: t('agree_privacy_statement.full', scope: "organisation.questions"), size: 'l' } do %>
        <p>
          <%= govuk_link_to t('organisation.questions.agree_privacy_statement.short'), "https://www.gov.uk/government/publications/homes-for-ukraine-scheme-expressions-of-interest-eois-privacy-notices/homes-for-ukraine-scheme-expressions-of-interest-charities-businesses-and-community-groups" %>
        </p>
        <%= f.govuk_check_box :agree_privacy_statement, "true", "false", multiple: false, link_errors: true, label: { text: t('agree_privacy_statement.comment', scope: "organisation.questions") } %><% end %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
