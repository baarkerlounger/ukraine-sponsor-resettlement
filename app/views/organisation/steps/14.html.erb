<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/organisation/steps/14", method: :post do |f| %>
      <%= f.govuk_check_box :agree_privacy_statement, "true", "false", multiple: false, link_errors: true, 
        label: { text: t('agree_privacy_statement.full', scope: "organisation.questions") }
      %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
