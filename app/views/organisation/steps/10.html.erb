<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application, url: "/organisation/steps/10", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :agree_future_contact,
        @application.agree_future_contact_types.map{|type| OpenStruct.new(id: type, name: t(type, scope: "yes_no_types")) },
        :id,
        :name,
        legend: { text: t('agree_future_contact.full', scope: "organisation.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
