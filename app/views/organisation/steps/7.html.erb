<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/organisation/steps/7", method: :post do |f| %>
      <%= f.govuk_text_field :postcode,
        label: { text: "#{t('postcode.full', scope: "organisation.questions")} #{t('postcode.subtitle', scope: "organisation.questions")}"},
        autocomplete: 'postal-code'
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
