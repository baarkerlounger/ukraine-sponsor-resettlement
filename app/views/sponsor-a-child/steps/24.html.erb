<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>



    <%= form_for @application, url: "/sponsor-a-child/steps/24", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :different_address,
          @application.different_address_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "unaccompanied_minor.different_address")) },
          :id,
          :name,
          legend: { text: t('different_address.full', scope: "unaccompanied_minor.questions") },
          hint: { text: t('different_address.hint_html', :formatted_address => @application.formatted_address?, scope: "unaccompanied_minor.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
