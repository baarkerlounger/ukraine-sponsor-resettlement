<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/1", method: :post do |f| %>

      <%= f.govuk_collection_radio_buttons :is_under_18,
                                           @application.eligibility_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "unaccompanied_minor.different_address")) },
                                           :id,
                                           :name,
                                           legend: { text: t('sponsored_children_age.full', scope: "unaccompanied_minor.questions") }
      %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
