<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/18", method: :post do |f| %>

    <%= f.govuk_error_summary link_base_errors_to: :sponsor_date_of_birth %>

      <h1 class="govuk-heading-l"><%= t('sponsor_date_of_birth.full', scope: "unaccompanied_minor.questions")%></h1>

       <% if @application.sponsor_date_of_birth.present?
            @application.sponsor_date_of_birth[1] = @application.sponsor_date_of_birth["1"]
            @application.sponsor_date_of_birth[2] = @application.sponsor_date_of_birth["2"]
            @application.sponsor_date_of_birth[3] = @application.sponsor_date_of_birth["3"]
            end
         %>
      
      <div class="govuk-hint" id="unaccompanied-minor-sponsor-date-of-birth-hint">For example, 31 3 2010</div>
      
      <%= f.govuk_date_field :sponsor_date_of_birth,
            date_of_birth: true,
            legend: { text: "", hidden: true } %>
      
      <div class="govuk-button-group">
        <%= f.govuk_submit t('continue') %>
        
        <% if @feature_save_and_return_active == true %>
          <a class="govuk-link" href="/sponsor-a-child/save-and-return">Save and return later</a>
        <% end %>
      </div>
    
    <% end %>
  </div>
</div>
