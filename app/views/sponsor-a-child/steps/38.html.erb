<% provide(:title, (session[:has_error] || '') + t('agree_privacy_statement.full', scope: "unaccompanied_minor.questions") + " - ") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @application, url: "/sponsor-a-child/steps/38", method: :post do |f| %>
        
    <%= f.govuk_error_summary link_base_errors_to: :privacy_statement_confirm %>

    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-heading-l">
            <%= t('agree_privacy_statement.heading', scope: "unaccompanied_minor.questions")  %>
          </h1>
        </legend>
    </fieldset>
        <%= f.govuk_check_boxes_fieldset :privacy_statement_confirm,
                                         multiple: false,
                                         legend: { text: "", hidden: true } do %>

        <%= f.govuk_check_box :privacy_statement_confirm, "true", "false", multiple: false, link_errors: true, label: { text: t('agree_privacy_statement.hint_html', scope: "unaccompanied_minor.questions") } %><% end %>

      <div class="govuk-button-group">
        <%= f.govuk_submit t('continue') %>
        <a class="govuk-link" href="/sponsor-a-child/save-and-return">Save and return later</a>
      </div>
    
    <% end %>
  </div>
</div>

