<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/7", method: :post do |f| %>

      <%= f.govuk_collection_radio_buttons :is_permitted,
                                           @application.eligibility_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "unaccompanied_minor.different_address")) },
                                           :id,
                                           :name,
                                           legend: { text: t('sponsor_right_to_live_in_uk.full', scope: "unaccompanied_minor.questions") }
      %>
              <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                    What is the minimum period?  
                    </span>
                    </summary>
                <div class="govuk-details__text">
                  You will need permission to live in the UK for at least 
                  <ul>
                  <li>3 years</li>
                  </ul> 
                  
                  OR 
                  
                  <ul>
                  <li>Until the child turns 18 and you have hosted them for at least 6 months</li>
                  </ul> 
                
                </div>
               </details>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
