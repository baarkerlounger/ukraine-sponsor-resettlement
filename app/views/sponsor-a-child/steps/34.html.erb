<% provide(:title, "Enter their date of birth - ") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @application, url: "/sponsor-a-child/steps/34", method: :post do |f| %>
        <%= f.govuk_error_summary link_base_errors_to: :minor_date_of_birth %>


      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="gem-c-title__text govuk-heading-l">
          Enter their date of birth
        </h1>
        </legend>
      </fieldset>

        <div class="govuk-inset-text">
          <%=@application.minor_full_name?%>
        </div>

        <% if @application.minor_date_of_birth.present?
            @application.minor_date_of_birth[1] = @application.minor_date_of_birth["1"]
            @application.minor_date_of_birth[2] = @application.minor_date_of_birth["2"]
            @application.minor_date_of_birth[3] = @application.minor_date_of_birth["3"]
            end
         %>

        <div class="govuk-hint" id="unaccompanied-minor-minor-date-of-birth-hint">For example, 31 3 2010</div>
        
        <%= f.govuk_date_field :minor_date_of_birth,
            date_of_birth: true,
            legend: { text: "", hidden: true } %>

      <div class="govuk-button-group">
        <%= f.govuk_submit t('continue') %>
        <a class="govuk-link" href="/sponsor-a-child/save-and-return">Save and return later</a>
      </div>
    
    <% end %>
  </div>
</div>
