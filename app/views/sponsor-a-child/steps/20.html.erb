<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/sponsor-a-child/steps/20", method: :post do |f| %>

      <%= f.govuk_radio_buttons_fieldset(:has_other_nationalities,
          legend: { size: 'l', text: t('sponsor_has_other_nationality.full', scope: "unaccompanied_minor.questions") },
          hint: { text: t('sponsor_has_other_nationality.hint', scope: "unaccompanied_minor.questions")} ) do %>
        <%= f.govuk_radio_button :has_other_nationalities, true, label: { text: t('Yes' ) } %>
        <%= f.govuk_radio_button :has_other_nationalities, false, label: { text: t('No' ) },  link_errors: true  %>
      <% end %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
