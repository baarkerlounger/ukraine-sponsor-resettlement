<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/additional-info/steps/5", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :residential_host,
          @application.residential_host_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "additional_info.residential_host")) },
          :id,
          :name,
          legend: { text: t('residential_host.full', scope: "additional_info.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
