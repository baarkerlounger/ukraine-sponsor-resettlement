<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/additional-info/steps/4", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :proof_of_id,
          @application.proof_of_ids.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "additional_info.proof_of_id")) },
          :id,
          :name,
          legend: { text: t('proof_of_id.full', scope: "additional_info.questions") }
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
