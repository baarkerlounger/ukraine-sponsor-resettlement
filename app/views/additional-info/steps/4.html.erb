<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <h2 class="govuk-heading-m">Enter your full residential address</h2>

    <p class="hint">This is the address where you live</p>

    <%= form_for @application, url: "/additional-info/steps/4", method: :post do |f| %>
      <%= f.govuk_text_field :residential_line_1,
                             label: { text: t('address_line_1.full', scope: "additional_info.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :residential_line_2,
                             label: { text: t('address_line_2.full', scope: "additional_info.questions") },
                             type: "text"
      %>
      <%= f.govuk_text_field :residential_town,
                             label: { text: t('address_town.full', scope: "additional_info.questions") },
                             type: "text",
                             width: 20
      %>
      <%= f.govuk_text_field :residential_postcode,
                             label: { text: t('address_postcode.full', scope: "additional_info.questions") },
                             type: "text",
                             width: 10
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
