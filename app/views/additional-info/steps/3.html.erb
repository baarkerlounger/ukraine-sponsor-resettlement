<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @application, url: "/additional-info/steps/3", method: :post do |f| %>
      <%= f.govuk_text_field :phone_number,
        label: { text: t('phone_number.full', scope: "additional_info.questions") },
        hint: { text: t('phone_number.hint', scope: "additional_info.questions")},
        type: "tel"
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>

