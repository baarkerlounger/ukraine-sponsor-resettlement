<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/additional-info/steps/9", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :more_properties,
          @application.more_properties_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "additional_info.more_properties")) },
          :id,
          :name,
          legend: { text: t('more_properties.full', scope: "additional_info.questions") },
          hint: { text: t('more_properties.hint', scope: "additional_info.questions")}
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
