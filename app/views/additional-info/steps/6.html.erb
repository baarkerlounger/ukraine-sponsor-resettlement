<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/additional-info/steps/6", method: :post do |f| %>
      <%= f.govuk_collection_radio_buttons :residential_pet,
          @application.residential_pet_types.map{ |type| OpenStruct.new(id: type, name: t(type, scope: "additional_info.residential_pet")) },
          :id,
          :name,
          legend: { text: t('residential_pet.full', scope: "additional_info.questions")},
          hint: { text: t('residential_pet.hint', scope: "additional_info.questions")}
      %>
      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
