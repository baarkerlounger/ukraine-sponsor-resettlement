<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

      <% if flash[:error] %>
        <p class="govuk-error-message">
            <%= flash[:error] %>
        </p>
      <% end %>

    <%= form_for :consent, url: "/sponsor-a-child/consent_upload", method: :post do |f| %>
      <%= f.govuk_text_field :reference, type: "text" %>
      <%= f.govuk_submit t('continue') %>
    <% end %>

  </div>
</div>
