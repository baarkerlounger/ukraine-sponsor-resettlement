<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "shared/back_link" %>

    <%= form_for @application, url: "/unaccompanied-minor/steps/42", method: :post do |f| %>
        <%= f.govuk_check_boxes_fieldset :agree_privacy_statement,
                                         multiple: false,
                                         legend: { text: 'Confirm that you have read and agree to the privacy statement', scope: "unaccompanied_minor.questions", size: "l" } do %>
            <p>
              <%= govuk_link_to t('individual.questions.agree_privacy_statement.short'), "https://www.gov.uk/government/publications/homes-for-ukraine-scheme-expressions-of-interest-eois-privacy-notices/homes-for-ukraine-scheme-expressions-of-interest-individuals" %>
            </p>
        <%= f.govuk_check_box :agree_privacy_statement, "true", "false", multiple: false, link_errors: true, label: { text: 'Yes, I have read the privacy statement and agree that the information I have provided in this form can be used for the Homes for Ukraine scheme', scope: "unaccompanied_minor.questions" } %><% end %>

        <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>