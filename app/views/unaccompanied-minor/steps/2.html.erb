<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <a href="#" onclick="history.go(-1);return false;" class="govuk-back-link">Back</a>

    <%= form_for @application, url: "/unaccompanied-minor/steps/2", method: :post do |f| %>

      <%= f.govuk_radio_buttons_fieldset(:is_eligible,
          legend: { size: 'm', text: t('sponsored_children_living_december.full', scope: "unaccompanied_minor.questions")},
          hint: { text: t('sponsored_children_living_december.hint', scope: "unaccompanied_minor.questions")}) do %>
        <%= f.govuk_radio_button :is_eligible, true, label: { text: t('Yes' ) } %>
        <%= f.govuk_radio_button :is_eligible, false, label: { text: t('No' ) },  link_errors: true  %>
      <% end %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
